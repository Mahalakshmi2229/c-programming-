#include<stdio.h>

void main()

{

    int a[100],b[100],c[100];

    int i,n,m;

    printf("enter the first array size\n");

    scanf("%d",&n);

    printf("enter the elements of first array\n");

    for(i=0;i<n;i++)

    {

        scanf("%d",&a[i]);

    }

    printf("enter the elements of second array\n");

    scanf("%d",&m);

    printf("enter the elements of second array\n");

    for(i=0;i<m;i++)

    {

        scanf("%d",&b[i]);

    }

    for(i=0;i<n;i++)

    {

        c[i]=a[i];

    }

    for(i=0;i<m;i++)

    {

        c[i+n]=b[i];

    }

    printf("the elemets after merging\n");

    for(i=0;i<n+m;i++)

    {

        printf("%d\t",c[i]);

    }

}
